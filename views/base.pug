doctype html
html
    head
        block title
        title DRust

        meta(charset='utf8')
        link(type='text/plain', rel='author' href='/humans.txt')

        link(rel='stylesheet', href=('/stylesheets/layout.css'))
        script(type='text/javascript', src=('/js/test.js'))

        block link
            -var selected = 'DRust';

    -var menu = {'DRust' : '/drust', 'Basen' : '/basen', 'Verktyg' : '/verktyg', 'Automaten' : '/automaten', 'Flipper' : '/flipper'};

    body
        nav
            ul
                each link, name in menu
                    li
                        if name === selected
                            a.active(href=link)= name
                        else
                            a(href=link)= name

        block content
